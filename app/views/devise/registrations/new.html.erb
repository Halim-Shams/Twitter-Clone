<div class="w-full max-w-xl p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> { :class=> 'space-y-6' }) do |f| %>
    <%= f.error_notification %>

    <h1 class="text-2xl font-medium text-gray-900">Sign Up</h1>

    <div class="form-inputs space-y-6">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  lebel_html: { class: 'block mb-2 text-sm font-medium text-gray-900' },
                  input_html: { autocomplete: "name", class: 'bg-gray-50 outline-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' }%>
      <%= f.input :username,
                  required: true,
                  lebel_html: { class: 'block mb-2 text-sm font-medium text-gray-900' },
                  input_html: { autocomplete: "username", class: 'bg-gray-50 outline-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' }%>
      <%= f.input :email,
                  required: true,
                  lebel_html: { class: 'block mb-2 text-sm font-medium text-gray-900' },
                  input_html: { autocomplete: "email", class: 'bg-gray-50 outline-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  hint_html: { class: 'font-thin text-sm' },
                  lebel_html: { class: 'block mb-2 text-sm font-medium text-gray-900' },
                  input_html: { autocomplete: "new-password", class: 'bg-gray-50 outline-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  lebel_html: { class: 'block mb-2 text-sm font-medium text-gray-900' },
                  input_html: { autocomplete: "new-password", class: 'bg-gray-50 outline-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'w-full text-white bg-sky-500 hover:bg-sky-600 focus:ring-4 focus:outline-none focus:ring-sky-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
    </div>
  <% end %>
</div>
