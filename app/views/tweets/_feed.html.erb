<% @tweets.each do | woff | %>
  <div class='border-t pl-4 hover:bg-gray-100/60 ease-in-out duration-200'>
    <div class='flex gap-3 py-3'>
      <img class='w-12 h-12 rounded-full' src="https://miro.medium.com/v2/resize:fill:176:176/1*YPkv2C4dj1uCFH4IctmrCA.png" alt="Profile Picture">
      <div class="flex flex-col gap-0.5 w-full pr-5">
        <nav class="flex w-full justify-between">
          <div class="flex items-center gap-1">
            <p class="font-bold"><%= woff.user.name %></p>
            <p class="text-sm text-gray-700/80">@<span><%= woff.user.username %></span></p>
          </div>
        </nav>
        <div class="flex flex-col gap-3.5">
          <p class="pr-7 text-black/90">
            <%= woff.tweet %>
          </p>
          <div class="flex items-center gap-2">
            <%= button_to tweet_path(woff), title:'Delete', method: :delete, data: { confirmation: "Are you sure?", turbo_confirm: "Are you sure?" }, class:'text-gray-700/40 hover:text-red-500' do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
            <% end %>
            <%= link_to edit_tweet_path(woff), title:'Edit', class:'text-gray-700/40 hover:text-sky-500' do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
              </svg>
            <% end %>
            <%= link_to woff, title:'Woff', class:'text-gray-700/40 hover:text-sky-500' do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18.375 12.739l-7.693 7.693a4.5 4.5 0 01-6.364-6.364l10.94-10.94A3 3 0 1119.5 7.372L8.552 18.32m.009-.01l-.01.01m5.699-9.941l-7.81 7.81a1.5 1.5 0 002.112 2.13" />
              </svg>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>