<div class="w-[50rem] border-x">
  <div class="px-4 py-6 sticky top-0 bg-white/70 backdrop-blur-md border-b">
    <% if user_signed_in? %>
      <h1 class="font-bold text-2xl">Home</h1>
    <% else %>
      <h1 class="font-bold text-2xl">Explore</h1>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class='px-4 pt-3 pb-3'>
      <%= render "form", tweet: @tweet %>
    </div>
  <% end %>

  <div id="tweets" class="min-w-full">
    <%= render 'feed' %>
  </div>
</div>
