<%= link_to tweet, :action => 'go' do %>
  <div id="<%= dom_id tweet %>" class='border-t pl-4 hover:bg-gray-100/60 ease-in-out duration-200'>
      <div class='flex gap-3 py-4'>
        <img class='w-12 h-12 rounded-full' src="https://pbs.twimg.com/profile_images/1579976964810629122/YblIuOMZ_400x400.jpg" alt="Profile Picture">
        <div class="flex flex-col gap-1">
          <p class="font-bold">Zain Kahn</p>
          <p class="ml-2">
            <%= tweet.tweet %>
          </p>
        </div>
      </div>
  </div>
<% end %>
